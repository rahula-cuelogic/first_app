<h1>Listing users</h1>

<table cellpadding="2" cellspacing="1" border="1">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>   
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %> &nbsp; <%= link_to 'Edit', edit_user_path(user) %> &nbsp; <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>    
  </tr>
<% end %>
</table>

<br />

